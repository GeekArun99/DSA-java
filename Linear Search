public class SmallestInTheArray {

    public static int SmallestNum(int []numbers){
        int smallest = Integer.MAX_VALUE;

        for(int number : numbers){
            if (number < smallest){
                smallest = number;
            }
        }
        return smallest;
    }
    public static void main(String [] args){
        int numbers[] = {1,44,22,76, 55, 0, -11, -100, -100};
        int smallestNum =SmallestNum(numbers);
        System.out.println("Smallest number in the given array is "+ smallestNum );
    }

}

