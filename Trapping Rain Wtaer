class Solution {
    public int trap(int[] height) {
         int totalWater=0;
        //Left highest
         int[] leftH= new int[height.length];
         leftH[0]=height[0];
         for(int i=1; i<leftH.length; i++){
            leftH[i]= Math.max(height[i], leftH[i-1]); // compare and get max
         }

        //Right highest
        int[] rightH= new int[height.length];
        rightH[rightH.length-1]=height[height.length-1];
         for(int i=rightH.length-2; i>=0; i--){
            rightH[i]= Math.max(height[i], rightH[i+1]);  // compare and get max
         }

        //total amount of water collected
       
        for(int i=0; i<height.length; i++){
              totalWater = totalWater+(Math.min(leftH[i], rightH[i])-height[i]); // get min for water height minus height

        }
return totalWater;
    
    }
     
}
